<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_bg"
    tools:context=".WelcomeActivity">

    <Button
        android:id="@+id/btn_matisser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_horizontal"
        android:layout_marginTop="38dp"
        android:layout_marginRight="@dimen/item_margin_horizontal"
        android:layout_marginBottom="16dp"
        android:minHeight="56dp"
        android:text="Matisser:对Matisser进行了包装，自带权限申请、图片裁剪、图片压缩"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:theme="@style/DraculaOverlay" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_matisse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_horizontal"
        android:layout_marginRight="@dimen/item_margin_horizontal"
        android:layout_marginBottom="16dp"
        android:minHeight="56dp"
        android:text="Matisse原本的Sample"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:theme="@style/DraculaOverlay" />

</LinearLayout>